<h1> <%= t '.listing' %> </h1>

<table class='table table-striped'>
  <thead>
  <tr>
    <th> <%= t'.title' %></th>
    <th> <%= t '.description' %></th>
    <th> <%= t '.year' %></th>
    <th colspan="3"></th>

  </tr>
  </thead>


    <% @book_items.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.description %></td>
        <td><%= book.year %></td>
        <td><div><%= link_to t('.edit') , edit_book_path(book.id) %></div></td>
        <td><div><%= link_to t('.show'), book_path(book.id) %></div></td>

      </tr>
    <% end %>
    </tbody>
    </table>

<br>

<div class="create"><%= link_to t('.create'), new_book_path %></div>
